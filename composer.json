{
    "name": "league/commonmark-extras",
    "type": "library",
    "description": "Useful extensions for customizing the league/commonmark parser",
    "keywords": ["markdown", "commonmark", "extensions", "extras"],
    "homepage": "https://github.com/thephpleague/commonmark-extras",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Colin O'Dell",
            "email": "colinodell@gmail.com",
            "homepage": "http://www.colinodell.com",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.8",
        "league/commonmark": "^0.13|^0.14"
    },
    "require-dev": {
        "jgm/SmartPunct": "0.26",
        "phpunit/phpunit" : "~4.3|~5.0",
        "scrutinizer/ocular": "~1.1"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "jgm/SmartPunct",
                "version": "0.26",
                "dist": {
                    "url": "https://raw.githubusercontent.com/jgm/commonmark.js/0.26.0/test/smart_punct.txt",
                    "type": "file"
                }
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "League\\CommonMark\\Extras\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "league\\CommonMark\\Extras\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    }
}
